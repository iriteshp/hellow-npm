{
  "name": "rp-hellow-package1",
  "version": "1.10.3",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1 && echo",
    "semantic-release": "semantic-release -e semantic-release-monorepo",
    "release.package2": "git add ./packages/package2 && git commit -m \"chore(release/package2) via automated release [skip actions]\"",
    "release.package3": "git add ./packages/package3 && git commit -m \"chore(release/package3) via automated release [skip actions]\""
  },
  "devDependencies": {
    "semantic-release": "^22.0.12",
    "semantic-release-monorepo": "^8.0.2"
  },
  "release": {
    "branches": [
      "main",
      "clean",
      "release"
    ],
    "ci": false,
    "dryRun": false,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "assets": [
            "package.json",
            "packages/*/package.json"
          ],
          "npmPublish": true
        }
      ],
      "@semantic-release/git",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "npm run release.package2 && npm run release.package3"
        }
      ]
    ],
    "repositoryUrl": "https://github.com/iriteshp/hellow-npm",
    "monorepo": {
      "dependencies": [
        "packages/package2",
        "packages/package3"
      ]
    }
  },
  "_release": {
    "monorepo": {
      "dependencies": [
        "packages/package2",
        "packages/package3"
      ]
    }
  }
}
